    "url": "https://github.com/nataliebasket/Bookville/issues"
  },
  "homepage": "https://github.com/nataliebasket/Bookville#readme",
  "devDependencies": {
    "@htmlacademy/editorconfig-cli": "^1.0.0",
    "browser-sync": "^2.27.7",
    "del": "^6.0.0",
    "gulp": "^4.0.2",
    "gulp-htmlmin": "^5.0.1",
    "gulp-plumber": "^1.2.1",
